{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./*"],
      "@workspace/ui": ["../../packages/ui/src"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next-page.d.ts",
    "next-params.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [".cache", ".next", ".turbo", "build", "dist", "node_modules"]
}
